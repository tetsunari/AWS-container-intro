{
  "name": "aws-container-intro",
  "version": "0.1.0",
  "description": "AWS CDK TypeScript project for Sbcntr container infrastructure",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "cdk": "cdk",
    "synth": "cdk synth",
    "synth:all": "cdk synth --all",
    "deploy": "cdk deploy",
    "deploy:all": "cdk deploy --all",
    "destroy": "cdk destroy",
    "diff": "cdk diff",
    "bootstrap": "cdk bootstrap",
    "hotswap": "cdk deploy --hotswap",
    "lint": "eslint --ext .js,.ts . --max-warnings=0",
    "lint:fix": "eslint --ext .js,.ts . --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf lib node_modules cdk.out",
    "check-updates": "npx npm-check-updates \"/aws-cdk/\"",
    "upgrade-cdk": "npx npm-check-updates -u \"/aws-cdk/\" && npm install",
    "security-check": "npm audit --audit-level high",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "prepare": "husky install"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.213.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.15",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "aws-cdk": "^2.213.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.4",
    "npm-check-updates": "^17.0.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/sbcntr-cdk-project.git"
  },
  "keywords": [
    "aws",
    "cdk",
    "typescript",
    "infrastructure",
    "containers",
    "ecs",
    "fargate"
  ],
  "author": "Your Team <team@example.com>",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "lib/**/*.ts",
      "!lib/**/*.d.ts",
      "!lib/**/*.test.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "overrides": {
    "constructs": "^10.3.0"
  }
}
